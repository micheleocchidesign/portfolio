---
import MainLayout from '../layouts/MainLayout.astro';
import PageTransition from '../components/PageTransition.astro';
import Cursor from '../components/Cursor.astro';
import Navbar from '../components/Navbar.astro';
import CursorToggle from '../components/CursorToggle.astro';
import Menu from '../components/Menu.astro';
import HeroLogo from '../components/HeroLogo.astro';
import InkFlooding from '../components/InkFlooding.astro';
import BeyondSection from '../components/BeyondSection.astro';
import WorksSection from '../components/WorksSection.astro';
import AboutSection from '../components/AboutSection.astro';
import AmoSection from '../components/AmoSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
---
<MainLayout>
	<PageTransition />	
    <Cursor />
    <Navbar />
    <CursorToggle />

    <HeroLogo />
    <InkFlooding color="var(--dark-text)" />
    <BeyondSection />
    <WorksSection />
    
    <div id="about-amo-wrapper">
        <AboutSection />
        <AmoSection />
    </div>
    <ContactSection />
    <Footer />    
</MainLayout>