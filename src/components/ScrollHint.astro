---
// Riceviamo l'ID della sezione di destinazione del click (es. "#beyond-section")
const { target } = Astro.props;
---

<div class="scroll-hint">
  <a href={target} class="internal-scroll-link">
    <span class="hint-text">KEEEEEEP</span>
    <span class="material-symbols-outlined">arrow_cool_down</span>
    <span class="hint-text">SCROLLIN'</span>
  </a>
</div>

<style>
 /* --- SCROLL HINT ARROW --- */
.scroll-hint {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    animation: scrollBounce 2s infinite;
    white-space: nowrap; /* Impedisce al testo di andare a capo */
}

/* Applica il cursore manina a tutto il blocco e ai suoi figli */
.scroll-hint, 
.scroll-hint * {
    cursor: pointer !important;
}

.internal-scroll-link {
    display: flex;
    align-items: center; /* Allinea verticalmente testo e icona */
    gap: 12px;           /* Spazio tra testo e freccia */
    text-decoration: none;
    color: inherit;
    cursor: pointer !important;
}

.hint-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 10px;
    letter-spacing: 0.2em;
    font-weight: 400;
    opacity: 0.8;
}

/* --- ICONA --- */
.scroll-hint .material-symbols-outlined {
    font-size: 28px; /* Ridotta leggermente per bilanciare il testo */
    font-variation-settings: 'wght' 200;
    line-height: 1;
    display: block;
}

.material-symbols-outlined a{
    text-decoration: none;
    color: inherit;
}

@keyframes scrollBounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
}

@media (max-width: 768px) {
    .scroll-hint {
        /* Se il contenitore padre Ã¨ alto quanto la sezione, 
           assicuriamoci che rimanga sopra la barra di Chrome */
        bottom: 15dvh; 
    }
}
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollToPlugin } from "gsap/ScrollToPlugin";

  gsap.registerPlugin(ScrollToPlugin);

  function initScrollHints() {
    const scrollLinks = document.querySelectorAll('.internal-scroll-link');
    
    scrollLinks.forEach(link => {
      // Rimuoviamo eventuali listener precedenti per evitare duplicati (utile con Astro)
      link.removeEventListener('click', handleScroll);
      link.addEventListener('click', handleScroll);
    });
  }

  function handleScroll(e) {
    e.preventDefault();
    const href = e.currentTarget.getAttribute('href');
    
    if (href && href.startsWith('#')) {
      gsap.to(window, { 
        duration: 1.5, 
        scrollTo: { y: href, autoKill: true }, 
        ease: "power3.inOut" 
      });
    }
  }

  // Inizializzazione per Astro
  initScrollHints();
  document.addEventListener('astro:page-load', initScrollHints);
</script>