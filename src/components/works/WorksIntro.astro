---
import ScrollHint from "../ScrollHint.astro";


---
<section id="works-intro">
    <h1 class="headline" id="works-title">
        <span id="works-selected">SELECTED</span><br> <span class="no-wrap huge-works">WoRKS</span>
    </h1>
    <ScrollHint target="#works-grid" />
</section>
<style>

/* --- MODIFICO COLORE FRECCINA SCROLL HINT --- */
#works-intro {
    position: relative;
    z-index: 2;
   /* Sopra tutto */
    background-color: var(--text-light);
    padding: 100px 40px;
    background-color: var(--dark-text);
    height: 100vh;
    /* AGGIUNGI QUESTI TRE: */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centra verticalmente */
    /* MODIFICA IL PADDING: */
    padding: 0 20px; /* Rimuovi i 100px in alto che sbilanciano il centro */
}

#works-title {
    transform: translateY(-5vh);
}

#works-selected {
    color: var(--accent-coral);
    display: inline-block;
    min-width: 5ch;
   /* Aggiungi queste righe: */
    font-family: 'Inter', sans-serif;
    font-weight: 900;
   /* Per farlo matchare con la pesantezza di BEYOND */
    letter-spacing: -0.02em;
}
 #works-selected br {
    display: none;
}

.huge-works {
    /* Valore minimo ridotto a 60px per i telefoni piccoli 
       Valore ideale 22vw per scalare proporzionalmente 
       Valore massimo 250px per i desktop giganti */
    font-size: clamp(70px, 22vw, 250px) !important; 
    color: var(--text-light);
    //line-height: 0.8; /* Stringiamo l'interlinea per un look pi√π bold */
    display: block;   /* Assicura che si comporti come un blocco */
    word-break: break-all; /* Sicurezza estrema per non rompere il layout */
}

#works-intro :global(.scroll-hint) {
    color: var(--text-light) !important;
}

/* --- TRANSIZIONE INCHIOSTRO CHIARO --- */
#works-ink-trigger {
    position: fixed; /* Come nell'index */
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 4; /* Sotto la griglia (5) ma sopra la intro (se serve) */
    pointer-events: none;
}

#works-ink-trigger svg {
    width: 100%;
    height: 100%;
    display: block;
}

#works-ink-path {
    fill: var(--text-light);
}
</style>
<script>
    import { decodeCycle } from '../../scripts/wordsdecoder';
    import { initInkReveal } from '../../scripts/ink-flooding.js';

    // --- INIZIALIZZAZIONE --- //
    const words = ["SELECTED", "COOL", "AWESOME", "WOW!"];
    decodeCycle(words, "#works-selected", { interval: 3000, speed: 2 });

</script>