<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    // Registriamo il plugin localmente
    gsap.registerPlugin(ScrollTrigger);

    function initWorksSection() {
    const section = document.querySelector("#works-section");
    const wrapper = document.querySelector(".works-wrapper");
    const ticker = document.querySelector("#ticker-scopri");
    const blobs = gsap.utils.toArray<HTMLElement>(".blob-item");

    if (!section || !wrapper) return;

    // 1. Ticker sempre attivo (indipendente dallo scroll)
    if (ticker) {
        gsap.to(ticker, {
            xPercent: -33.33, // Se il testo è ripetuto 3 volte
            duration: 10,
            repeat: -1,
            ease: "none"
        });
    }

    // 2. TIMELINE UNICA per Scroll Orizzontale + Parallasse
    // Creiamo una timeline che gestisce il PIN
    const mainTl = gsap.timeline({
        scrollTrigger: {
            trigger: section,
            start: "top top",
            end: () => `+=${wrapper.scrollWidth}`,
            pin: true,
            pinSpacing: true,
            scrub: 1,
            invalidateOnRefresh: true,
            refreshPriority: 1,
            anticipatePin: 1 // Riduce il saltello all'aggancio
        }
    });

    // Aggiungiamo lo spostamento del wrapper alla timeline
    mainTl.to(wrapper, {
        x: () => -(wrapper.scrollWidth - window.innerWidth),
        ease: "none"
    }, 0); // Parte al tempo 0 della timeline

    // Aggiungiamo il parallasse dei blob alla STESSA timeline
    blobs.forEach((blob, i) => {
        mainTl.to(blob, {
            x: (i + 1) * 100, // Movimento relativo allo scroll orizzontale
            ease: "none"
        }, 0); // Anche questo parte al tempo 0 e dura quanto lo scroll
    });
}

    // Esecuzione al caricamento
    // Usiamo 'load' per essere sicuri che i font (Mofont) e le dimensioni siano pronti
    
    window.addEventListener('load', () => {
        setTimeout(() => {
            ScrollTrigger.refresh();
            initWorksSection()
        }, 100); 
    });
</script>
