<style>
    .pin-spacer {
        min-height: 100vh !important;
    }
    #works-section {
    height: 100vh !important;
    min-height: 100vh !important;
    max-height: 100vh !important;
    width: 100%;
    overflow: hidden;
    background-color: var(--text-light);
    position: relative;
    z-index: 5;
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0; /* Assicurati che non ci sia padding che ruba spazio ai 100vh */
}

.works-wrapper {
    display: flex;
    position: relative;
    height: 100%; /* Usa 100% per ereditare i 100vh del padre */
    align-items: center;
    flex-wrap: nowrap; 
    width: max-content; 
    will-change: transform;
}
 #ticker-scopri {
    font-family: 'Inter', sans-serif;
    font-size: 10vh !important;
   /* Molto più piccolo, funge da ticker */
    font-weight: 900;
    line-height: 1;
    opacity: 1;
    text-decoration: underline;
}
 #huge-works {
    font-family: 'Mofont', sans-serif;
    font-size: 50vh !important;
   /* Monumentale */
    line-height: 1;
    display: block;
}
 .big-works-link {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    white-space: nowrap;
    text-decoration: none;
    z-index: 10;
   /* Sopra i blob */
    color: var(--dark-text);
    padding: 0 10vw;
    cursor: pointer !important;
    flex-shrink: 0;
}
 .big-works-link:hover .text-inter, .big-works-link:hover .text-mofont {
    text-decoration: underline;
}
/* --- GALLERY DEI BLOB (Il "Fondale") --- */
 .blob-gallery {
    position: absolute;
    top: 0;
    left: 0;
   /* Importante: deve coprire l'intera larghezza del wrapper */
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
}
 .blob-item {
    position: absolute;
    width: 450px;
    height: 450px;
    overflow: hidden;
    will-change: transform;
    transition: clip-path 0.4s ease;
}
/* Distribuzione spaziale (percentuali basate sulla larghezza totale) */
 .b1 {
    top: 5%;
    left: 5%;
    background-color: var(--accent-gold);
    clip-path: url(#shape1);
    -webkit-clip-path: url(#shape1);
}
 .b2 {
    top: 45%;
    left: 25%;
    background-color: var(--dark-blue);
    clip-path: url(#shape2);
    -webkit-clip-path: url(#shape2);
}
 .b3 {
    top: 8%;
    left: 45%;
    background-color: var(--accent-coral);
    clip-path: url(#shape3);
    -webkit-clip-path: url(#shape3);
}
 .b4 {
    top: 35%;
    left: 70%;
    background-color: var(--light-blue);
    clip-path: url(#shape1);
    transform: rotate(90deg);
}
 .b5 {
    top: 2%;
    left: 85%;
    background-color: var(--violet);
    clip-path: url(#shape2);
    transform: rotate(-45deg);
}
